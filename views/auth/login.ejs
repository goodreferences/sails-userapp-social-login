
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="lib/bootstrap-social/bootstrap-social.css">
<link rel="stylesheet" href="lib/font-awesome/css/font-awesome.min.css">
<link rel="stylesheet" href="styles/auth.css">
<link rel="stylesheet" href="styles/style.css">

<nav class="navbar navbar-default">
  <div class="container-fluid text-center">
      <p class="navbar-text"><strong>Sigin</strong></p>
  </div>
</nav>

<div class="container-fluid text-center">
  <form class="form-signin" action="/auth/sigin" role="form" method="post">

    <small class="text-muted">Connect 'Sails UserApp Social Login' with your favorite social network</small>
    <br><br>

    <p>
      <a class="btn btn-social-icon btn-facebook" ng-click="login('facebook')">
        <i class="fa fa-facebook"></i>
      </a>
      <a class="btn btn-social-icon btn-twitter" ng-click="login('twitter')">
        <i class="fa fa-twitter"></i>
      </a>
    </p>
    <p>
      <a class="btn btn-social-icon btn-linkedin" ng-click="login('linkedin')">
        <i class="fa fa-linkedin"></i>
      </a>
      <a class="btn btn-social-icon btn-google" ng-click="login('google')">
        <i class="fa fa-google"></i>
      </a>
    </p>

    <small class="text-muted">Or sign in with 'Sails UserApp Social Login'</small>
    <br><br>

    <input id="username" name="username" class="ember-view ember-text-field form-control login-input" placeholder="Username or Email" type="text">
    <input id="password" name="password" class="ember-view ember-text-field form-control login-input-pass" placeholder="Password" type="password">

    <button class="btn btn-lg btn-primary btn-block btn-center" type="submit" >Sign in</button>
    <br>
    <small class="create-account text-muted">Dont have a 'Sails UserApp Social Login'2 or social network account? <button id="btsignup" class="ember-view btn btn-sm btn-default"> Sign Up </button> </small>
  </form>
</div>
